{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    <div class="g5-list">
        {% if particle.headline %}<h4>{{ particle.headline }}</h4>{% endif %}
        
        <ul>
            {% for item in particle.items %}
                <li>
                    {% if item.link %}<a href="{{ item.link }}" target="{{ item.target }}">{{ item.text }}</a>
                    {% elseif item.text %}{{ item.text }}{% endif %}
                </li>
            {% endfor %}
        </ul>
        
    </div>
{% endblock %}
